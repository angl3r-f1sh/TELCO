@model IEnumerable<TELCO.Models.BD.VIDEOJUEGOS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/styless/Principal.css">
<h2 style="font-weight: 600">Catálogo de Videojuegos</h2>

<p>
    <br>
    @*@Html.ActionLink("Crear nuevo", "Create")*@
    <button onclick="location.href='@Url.Action("Create", "VIDEOJUEGOS")';return false;" id="pbutton" type="button" class="btn btn-primary" )>Agregar nuevo</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Nombre género")
        </th>
        <th>
            @Html.Label("Tipo plataforma")
        </th>
        <th>
            @Html.Label("Nombre")
        </th>
        <th>
            @Html.Label("Descripción")
        </th>
        <th>
            @Html.Label("Fecha de lanzamiento")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GENEROS.txt_genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PLATAFORMAS.txt_plataforma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.txt_nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.txt_descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fec_lanzamiento)
        </td>
        <td>
            <a class="btn" data-toggle="tooltip" data-placement="top" title="Editar" href='@Url.Action("Edit", "VIDEOJUEGOS", new { id = item.cod_videojuego })'><img src="~/Images/DIM/edit2.png" style="width:40px;height:40px" /></a>
            @*<a class="btn" data-toggle="tooltip" data-placement="top" title="Ver detalles" href='@Url.Action("Details", "VIDEOJUEGOS", new { id = item.cod_videojuego })'><img src="~/Images/DIM/detail2.png" style="width:40px;height:40px" /></a>*@
            <a class="btn" data-toggle="tooltip" data-placement="top" title="Eliminar" href='@Url.Action("Delete", "VIDEOJUEGOS", new { id = item.cod_videojuego })'><img src="~/Images/DIM/del3.png" style="width:40px;height:40px" /></a>
        </td>
    </tr>
}

</table>
